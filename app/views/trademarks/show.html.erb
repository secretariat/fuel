<%- model_class = Trademark -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @trademark.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:operator_name) %>:</strong></dt>
  <dd><%= @trademark.operator_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lang_id) %>:</strong></dt>
  <dd><%= @trademark.lang_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trademarks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trademark_path(@trademark), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trademark_path(@trademark),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
