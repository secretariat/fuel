<%- model_class = Country -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:iso2) %>:</strong></dt>
  <dd><%= @country.iso2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_name) %>:</strong></dt>
  <dd><%= @country.short_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:long_name) %>:</strong></dt>
  <dd><%= @country.long_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:iso3) %>:</strong></dt>
  <dd><%= @country.iso3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:numcode) %>:</strong></dt>
  <dd><%= @country.numcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:un_member) %>:</strong></dt>
  <dd><%= @country.un_member %></dd>
  <dt><strong><%= model_class.human_attribute_name(:calling_code) %>:</strong></dt>
  <dd><%= @country.calling_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cctld) %>:</strong></dt>
  <dd><%= @country.cctld %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              countries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_country_path(@country), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              country_path(@country),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
