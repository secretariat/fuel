<%= form_for @country, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :iso2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :iso2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :short_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :long_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :long_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :iso3, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :iso3, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :numcode, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :numcode, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :un_member, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :un_member, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :calling_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :calling_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cctld, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cctld, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                countries_path, :class => 'btn' %>
  </div>
<% end %>
